#:kivy 1.11.1

<Button>:
    font_size: 40
    color: 0.8, 0.8, 0.8, 1
    size_hint: 0.3, 0.1
    background_color: 0.3, 0.3, 0.3, 1

<Label>:
    color: 0.8, 0.8, 0.8, 1
    size_hint: 0.3, 0.1
    font_size: 55


WindowManager:
    MainWindow:
    NovaScoreWindow:



<MainWindow>:
    name: "main"

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos

    FloatLayout:
        Label:
            text: "Ultra-Processed Food Scanner"
            color: 0.9, 0.9, 0.9, 1
            pos_hint: {"x": 0.25, "top": 1}
            font_size: 90
            size_hint: 0.5, 0.15

        Image: 
            source: "barcode.png"
            allow_stretch: True
            size_hint: 0.8, 0.8
            pos_hint: {"x": 0.1, "top": 0.8}
        
        Label:
            text: "Scan a barcode to view Nova Score"
            pos_hint: {"x": 0.35, "top": 0.75}
            
        Button: 
            text: "Scan"
            pos_hint: {"x": 0.35, "top": .15}
            on_release: 
                app.root.current = "novaScoreWindow"
                root.manager.transition.direction = "left"



<NovaScoreWindow>:
    name: "novaScoreWindow"

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos

    Button:
        text: "Scan Another Item"
        pos_hint: {"x": 0.35, "top": .15}
        on_release: 
            app.root.current = "main"
            root.manager.transition.direction = "right"